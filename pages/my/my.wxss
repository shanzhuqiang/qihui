/* pages/my/my.wxss */
page{
  height: 100%
}
.myWrap{
  height: 100%;
  background: #f8f8f8;
}
.myWrap .bgBox{
  height: 380rpx;
}
.myWrap .bgBox .bgTop {
	height: 240rpx;
	background-color: #e4364e;
	border-radius: 0 0 60rpx 60rpx;
  position: relative;
}
.myWrap .bgBox .bgTop .qishouBox{
	height: 34rpx;
  padding: 0 14rpx;
  line-height: 34rpx;
	background-image: linear-gradient(77deg, 
		#8f65ff 0%, 
		#657eff 100%), 
	linear-gradient(
		#ffc600, 
		#ffc600);
	background-blend-mode: normal, 
		normal;
	border-radius: 4rpx;
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
	color: #fff;
  position: absolute;
  left: 180rpx;
  top: 116rpx;
}
.myWrap .bgBox .bgTop .touxiangBox{
  width: 110rpx;
  height: 110rpx;
  line-height: 110rpx;
	background-color: #cecece;
  border: 4rpx solid #fff;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  top: 50rpx;
  left: 30rpx;
}
.myWrap .bgBox .bgTop .touxiangBox .touxiang{
  width: 52rpx;
  height: 52rpx;
  vertical-align: middle;
}
.myWrap .bgBox .bgTop .loginText{
	font-family: PingFangSC-Medium;
	font-size: 34rpx;
  height: 40rpx;
  line-height: 40rpx;
	color: #fff;
  position: absolute;
  left: 180rpx;
  top: 82rpx;
}
.myWrap .bgBox .itemBlock{
  padding: 0 30rpx;
}
.myWrap .bgBox .itemBlock .itemBox{
	width: 340rpx;
	height: 144rpx;
	background-color: #fff;
	box-shadow: -1rpx 6rpx 8rpx 1rpx 
		rgba(0, 0, 0, 0.05);
	border-radius: 10rpx;
  position: relative;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: -30rpx;
}
.myWrap .bgBox .itemBlock .itemBox .price{
	font-family: PingFangSC-Semibold;
	font-size: 36rpx;
	color: #fe4a2c;
  padding-top: 30rpx;
}
.myWrap .bgBox .itemBlock .itemBox .yue{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
  padding-top: 20rpx;
}
.myWrap .bgBox .itemBlock .itemBox .chongzhi{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	color: #323999;
  padding-top: 36rpx;
}
.myWrap .bgBox .itemBlock .itemBox .chongzhi.chongzhi2{
	color: #999;
}
.myWrap .bgBox .itemBlock .itemBox .priceIcon{
	width: 45rpx;
  height: 45rpx;
  padding-top: 20rpx;
  float: right;
}
.myWrap .bgBox .itemBlock .itemBox .priceIcon.zuanshi{
  width: 54rpx;
  height: 44rpx;
}
.myWrap .rowItem{
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 30rpx;
  border-bottom: 20rpx solid #f8f8f8;
  background: #fff;
}
.myWrap .rowItem .iconBox{
  height: 100rpx;
  line-height: 100rpx;
  width: 100rpx;
  display: inline-block;
}
.myWrap .rowItem .iconBox .icon{
  vertical-align: middle;
}
.myWrap .rowItem .iconBox .icon.qishou{
  width: 32rpx;
  height: 34rpx;
}
.myWrap  .rowItem .iconBox .icon.wechat2{
  width: 37rpx;
  height: 31rpx;
}
.myWrap .rowItem .iconBox .icon.jifen{
  width: 35rpx;
  height: 39rpx;
}
.myWrap .rowItem .iconBox .icon.xianjin{
  width: 32rpx;
  height: 31rpx;
}
.myWrap .rowItem .text{
  display: inline-block;
  height: 120rpx;
  line-height: 120rpx;
	font-family: PingFangSC-Regular;
	color: #333;
	font-size: 28rpx;
}
.myWrap .rowItem .des{
  float: right;
  height: 120rpx;
  line-height: 120rpx;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #999;
  margin-right: 10rpx;
}
.myWrap .rowItem .arrowIcon{
  float: right;
  padding-top: 8rpx;
}
.myWrap .bottomText{
	font-family: PingFangSC-Regular;
	font-size: 22rpx;
  height: 30rpx;
  line-height: 30rpx;
	color: #999;
  padding-top: 20rpx;
  text-align: center;
}