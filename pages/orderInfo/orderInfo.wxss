/* pages/orderInfo/orderInfo.wxss */
.orderInfoWrap .firstRow{
  height: 100rpx;
  line-height: 100rpx;
	font-family: PingFangSC-Regular;
	font-size: 36rpx;
	color: #323333;
  padding: 0 30rpx;
  border-bottom: 20rpx solid #f2f2f2;
}
.orderInfoWrap .firstRow .shopName{
  float: right;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #999;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  width: 400rpx;
}
.orderInfoWrap .weCodeRow{
  border-bottom: 20rpx solid #f2f2f2;
  padding: 30rpx 0;
  text-align: center;
  position: relative;
}
.orderInfoWrap .weCodeRow .weCode{
  width: 300rpx;
  height: 300rpx;
  position: relative;
  margin: 0 auto;
}
.orderInfoWrap .weCodeRow .weCode .weCodeMask{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99;
}
.orderInfoWrap .weCodeRow .codeText{
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: #323333;
}
.orderInfoWrap .weCodeRow .orderStatus{
  position: absolute;
  right: 47rpx;
  top: 35rpx;
  width: 136rpx;
  height: 102rpx;
  z-index: 100;
}
.orderInfoWrap .itemRow{
  padding: 0 30rpx;
	border-bottom: solid 20rpx #f2f2f2;
}
.orderInfoWrap .itemRow .itemOne{
  height: 100rpx;
  line-height: 100rpx;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #363636;
	border-bottom: solid 1rpx #f2f2f2;
}
.orderInfoWrap .itemRow .itemOne .itemLeft{
  height: 100rpx;
  float: left;
  width: 500rpx;
}
.orderInfoWrap .itemRow .itemOne .itemLeft .one{
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding-top: 20rpx;
	color: #363636;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.orderInfoWrap .itemRow .itemOne .itemLeft .two{
	font-family: PingFangSC-Regular;
	font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
	color: #676767;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.orderInfoWrap .itemRow .itemOne .num{
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #363636;
  float: left;
  height: 100rpx;
}
.orderInfoWrap .itemRow .itemOne .price{
  float: right;
  height: 100rpx;
	font-family: PingFangSC-Semibold;
	font-size: 26rpx;
	color: #363636;
}
.orderInfoWrap .secondRow{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #333333;
	border-bottom: solid 20rpx #f2f2f2;
}
.orderInfoWrap .secondRow2{
  padding: 26rpx 30rpx 0 30rpx;
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #333333;
	border-bottom: solid 20rpx #f2f2f2;
}
.orderInfoWrap .secondRow2 .rightVal{
	color: #f3475f;
}
.orderInfoWrap .secondRow2 .jianjie{
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	line-height: 40rpx;
	color: #666;
  width: 500rpx;
  padding: 10rpx 0 26rpx 0;
}
.orderInfoWrap .secondRow .rightVal{
  float: right;
  height: 100rpx;
  line-height: 100rpx;
  max-width: 600rpx;
}
.orderInfoWrap .lastRow{
  padding: 38rpx 30rpx;
	font-family: PingFangSC-Regular;
	color: #333333;
	font-size: 26rpx;
	border-bottom: solid 20rpx #f2f2f2;
  display: flex;
  align-items: left;
  justify-content: space-around;
  flex-direction: column;
}
.orderInfoWrap .lastRow .rightVal{
  display: flex;
  align-items: left;
  justify-content: space-around;
  flex-direction: column;
  float: right;
  max-width: 580rpx;
}
.orderInfoWrap .bottomBox{
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 0 30rpx;
  background: #fff;
	box-shadow: 0px -3rpx 4rpx 0 rgba(0, 0, 0, 0.02);
}
.orderInfoWrap .bottomBox .btnBox{
	height: 64rpx;
  line-height: 64rpx;
  text-align: center;
	border-radius: 10rpx;
	border: solid 1rpx #999;
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #363636;
  padding: 0 20rpx;
  float: right;
  margin-top: 28rpx;
}
.orderInfoWrap .bottomBox .btnBox.colorBtn{
	border: solid 1rpx #ff603e;
	color: #ff603e;
}