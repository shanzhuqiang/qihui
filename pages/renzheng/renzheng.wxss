/* pages/login/login.wxss */
.renzhengWrap{
  height: 100%;
  padding: 0 50rpx;
}
.renzhengWrap .loginBox{
  position: relative;
  padding-top: 100rpx;
}
.renzhengWrap .loginBox .iptBox{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
	border-bottom: solid 1rpx #e3e3e3;
}
.renzhengWrap .loginBox .iptBox .input{
  float: left;
  height: 88rpx;
  line-height: 88rpx;
	font-size: 32rpx;
  width: 550rpx;
	font-family: PingFangSC-Regular;
	color: #acacac;
}
.renzhengWrap .loginBox .iptBox .arrowIcon{
  float: right;
  padding-top: 8rpx;
}
.renzhengWrap .loginBox .loginBtn{
	height: 100rpx;
  width: 100%;
  margin: 50rpx auto 0;
}
.renzhengWrap .loginBox .loginBtn .login{
  width: 100%;
	height: 100rpx;
  line-height: 100rpx;
	background-color: #f3475f;
	border-radius: 5rpx;
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
  text-align: center;
	color: #ffffff;
}