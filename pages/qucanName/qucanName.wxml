<!--pages/qucanName/qucanName.wxml-->
<view class="qucanNameWrap">
  <view class="iptRow">
    <view class="label">取餐人姓名</view>
    <view class="iptBox">
      <input class="ipt" placeholder="请输入姓名" bindinput="nameChange" value="{{ name }}"></input>
    </view>
  </view>
  <view class="iptRow">
    <view class="label">手机号码</view>
    <view class="iptBox">
      <input class="ipt" placeholder="请输入手机号码" type="number" maxlength="11" bindinput="phoneChange" value="{{ phone }}"></input>
    </view>
  </view>
  <view class="saveBtn" bindtap="saveForm">保存</view>
</view>
