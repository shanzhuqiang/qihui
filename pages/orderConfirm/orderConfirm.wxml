<!--pages/orderConfirm/orderConfirm.wxml-->
<view class="orderConfirmWrap">
  <view class="rowOne" bindtap="goQucanName">
    <text>请输入取餐人信息</text>
    <image class="next" src="../../images/next.png"></image>
  </view>
  <view class="rowTwo">
    <view class="first">
      <image class="local2" src="../../images/local2.png"></image>
      <view class="content">
        <view class="address">浙江省杭州市余杭区乔司街道东海水景城XXX街道XXX号</view> 
        <view class="juli">距您1.5km</view>
      </view>
      <view class="typeBtn">
        <view class="active" style="margin-left: 6rpx;">堂食</view>
        <view style="margin-right: 6rpx;">外带</view>
      </view>
    </view>
    <view class="second"bindtap="timeTigger">
      <text>到店时间</text>
      <view class="fr">
        <text>立即到店</text>
        <image class="next" src="../../images/next.png"></image>
      </view>
    </view>
  </view>
  <view class="rowMain" >
    <view class="title">XXXX菜馆名称</view>
    <view class="rowItem">
      <image class="icon" src="../../images/img.png"></image>
      <view class="name">肉末豆腐</view>
      <view class="num">x1</view>
      <view class="price">￥9.9</view>
    </view>
    <view class="rowItem">
      <image class="icon" src="../../images/img.png"></image>
      <view class="name">肉末豆腐肉末豆腐肉末豆腐肉末豆腐肉末豆腐肉末豆腐</view>
      <view class="num">x1</view>
      <view class="price">￥9.9</view>
    </view>
    <view class="rowItemLast">
      <view class="baozhuang fl">包装</view>
      <view class="fl">包装费</view>
      <view class="fr">￥4</view>
    </view>
  </view>
  <view class="rowOne" bindtap="zhifuTigger">
    <text>支付方式</text>
    <view class="wechatBox fr" wx:if="{{ payType === 'wechat' }}">
      <image class="wechat" src="../../images/wechat.png"></image>
      微信支付
    </view>
    <view class="wechatBox fr" wx:if="{{ payType === 'yue' }}">
      <image class="wechat" src="../../images/yue.png"></image>
      余额支付
    </view>
    <image class="next" src="../../images/next.png"></image>
  </view>
  <view class="rowOne" bindtap="beizhuTigger">
    <text>备注</text>
    <image class="next" src="../../images/next.png"></image>
  </view>
  <view style="height: 120rpx;"></view>
  <!-- bottom Total -->
  <view class="bottomTotal">
    <view class="total">合计：<text>￥27.04</text></view>
    <view class="payNow">去支付</view>
  </view>
  <!-- 备注 -->
  <van-action-sheet show="{{ beizhuMaxk }}" title="订单备注" bind:close="beizhuTigger">
    <view class="beizhuBox">
      <view class="beizhuContent">
        <textarea class="textareaIpt" placeholder-style="font-size:24rpx;color: #999" maxlength="50" placeholder="请输入备注内容" />
      </view>
      <view class="confirmBtn">确定</view>
    </view>
  </van-action-sheet>
  <!-- 支付方式 -->
  <van-action-sheet show="{{ zhifuMaxk }}" title="支付方式" bind:close="zhifuTigger">
    <view class="zhifuBox">
      <view class="itemBox">
        <view class="item" bindtap="payTypeChoose" data-id="yue">
          <image class="img" src="../../images/yue.png"></image>
          <view class="name">余额支付<text>(剩余：20.38)</text></view>
          <view wx:if="{{ payType === 'yue' }}" class="gou iconfont icon-gou"></view>
        </view>
        <view class="item" bindtap="payTypeChoose" data-id="wechat">
          <image class="img" src="../../images/wechat.png"></image>
          <view class="name">微信支付</view>
          <view wx:if="{{ payType === 'wechat' }}" class="gou iconfont icon-gou"></view>
        </view>
      </view>
    </view>
  </van-action-sheet>
  <!-- 到店时间 -->
  <van-action-sheet show="{{ timeMaxk }}" title="请选择到店时间" bind:close="timeTigger" safe-area-inset-bottom="{{false}}">
    <view class="timeBox">
      <view class="leftBox">
        <view class="item">今日（周三）</view>
      </view>
      <view class="rightBox">
        <view class="item" bindtap="chooseTime" data-id="0">立即到店<van-icon wx:if="{{ arriveTime == 0 }}" class="okIcon" name="checked" size="40rpx" color="#52d669"/></view>
        <view class="item" bindtap="chooseTime" data-id="1">16:30<van-icon wx:if="{{ arriveTime == 1 }}" class="okIcon" name="checked" size="40rpx" color="#52d669"/></view>
      </view>
    </view>
  </van-action-sheet>
</view>
